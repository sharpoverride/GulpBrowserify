{
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "forOf": true,
    "modules": true,
    "templateString": true,
    "jsx": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "quotes": [2, "single"],
    "key-spacing": [2, { "align": "value" }],
    "no-multi-spaces": 0,
    "semi": 2
  }
}